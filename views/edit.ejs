<!-- header -->
<% include /partials/header %>

<!-- After top navigation menu -->
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= post.title %></div>
    <form class="ui form" action="/posts/<%= post._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="title" value="<%= post.title %>">
        </div>
        <div class="field">
            <label>Post Content</label>
            <textarea name="text"><%= post.text %></textarea>
        </div>
        <div class="field">
            <label>Author</label>
            <input type="text" name="author" value="<%= post.author %>">
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>

<!-- footer -->
<% include /partials/footer %>
